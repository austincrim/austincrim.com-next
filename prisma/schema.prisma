generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id          Int      @id @default(autoincrement())
  title       String
  content     String
  dateWritten DateTime @default(now())
  likes       Int      @default(0)
  hits        Int      @default(0)
  lede        String?
  slug        String?  @unique
  published   Boolean  @default(false)
}

model Project {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  repoUrl     String?
  appUrl      String?
  order       Int?    @default(-1)
}

model Appearance {
  id     Int    @id @default(autoincrement())
  title  String
  imgUrl String
}

model View {
  id        String   @id @default(uuid())
  path      String
  visitedAt DateTime @default(now())
}

model Session {
  id        String   @id
  createdAt DateTime @default(now())
  expiresAt DateTime
}
