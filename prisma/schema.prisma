generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id          Int      @id @default(autoincrement())
  title       String
  content     String
  dateWritten DateTime @default(now())
  likes       Int      @default(0)
  hits        Int      @default(0)
  lede        String
  slug        String   @unique
}
